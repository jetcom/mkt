# Django settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (leave empty for SQLite in development)
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/dbname
